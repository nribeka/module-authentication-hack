<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>authentication</id>
	<name>Authentication Module Module</name>
	<version>1.0.0</version>
	<package>org.openmrs.module.authentication</package>
	<author>nribeka</author>
	<description>
		Simple hack to add token based authentication on OpenMRS.
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/authentication/update.rdf</updateURL>
	<require_version>1.8.3</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.authentication.AuthenticationActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.authentication.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
		Authentication.hbm.xml
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with authentication. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

