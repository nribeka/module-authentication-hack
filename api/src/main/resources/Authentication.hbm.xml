<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="org.openmrs.module.authentication.Authentication" table="authentication_authentication">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native"/>
        </id>
        <discriminator column="id" insert="false"/>
        <property name="token" type="java.lang.String" column="token" length="38" unique="true"/>
        <property name="username" type="java.lang.String" column="username" length="38" unique="true"/>
        <property name="duration" type="java.lang.Long" column="duration"/>
        <property name="expirationDate" type="java.util.Date" column="expirationDate"/>
        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true"/>
    </class>

</hibernate-mapping>
